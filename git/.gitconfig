[user]
	name = Hicham
	email = hichamdevpro@gmail.com
[core]
	editor = nvim
[alias]
	st = status
	co = checkout
	br = branch
	ci = commit
	last = log -1 HEAD
	unstage = reset HEAD --
	lg = log --graph --oneline --decorate --all
[pull]
    rebase = true
[init]
    defaultBranch = main
[color]
    ui = auto
[diff]
    tool = nvimdiff
[merge]
    tool = nvimdiff
    conflictstyle = diff3
[push]
    default = simple
    autoSetupRemote = true
[help]
    autocorrect = 1
[rerere]
    enabled = true
